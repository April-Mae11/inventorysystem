<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.nva.printing.inventory.roles.ArchiveViewController">
   <top>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER" style="-fx-background-color: #a70104; -fx-padding: 20;">
               <children>
                  <Label text="Archive - Used/Deleted Items" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="24.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <!-- Action bar -->
            <HBox spacing="10.0" style="-fx-padding: 10;">
               <children>
                  <Button fx:id="retrieveButton" mnemonicParsing="false" onAction="#handleRetrieveSelected" text="Retrieve" />
                  <Button fx:id="clearArchiveButton" mnemonicParsing="false" onAction="#handleClearArchive" text="Clear Archive" />
                  <Button fx:id="backButton" mnemonicParsing="false" onAction="#handleBack" text="Back" />
                  <Region HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
         </children>
      </VBox>
   </top>
   <center>
      <TableView fx:id="archiveTable" BorderPane.alignment="CENTER">
         <columns>
            <TableColumn fx:id="idColumn" prefWidth="60.0" text="ID" style="-fx-alignment: CENTER;" />
            <TableColumn fx:id="nameColumn" prefWidth="150.0" text="Item Name" style="-fx-alignment: CENTER;" />
            <TableColumn fx:id="categoryColumn" prefWidth="120.0" text="Category" style="-fx-alignment: CENTER;" />
            <TableColumn fx:id="typeColumn" prefWidth="200.0" text="Type" style="-fx-alignment: CENTER;" />
            <TableColumn fx:id="quantityUsedColumn" prefWidth="80.0" text="Quantity Used" style="-fx-alignment: CENTER;" />
            <TableColumn fx:id="unitPriceColumn" prefWidth="100.0" text="Unit Price" style="-fx-alignment: CENTER;" />
            <TableColumn fx:id="supplierColumn" prefWidth="150.0" text="Supplier" style="-fx-alignment: CENTER;" />
            <TableColumn fx:id="dateUsedColumn" prefWidth="130.0" text="Date Used" style="-fx-alignment: CENTER;" />
            <TableColumn fx:id="usedByColumn" prefWidth="120.0" text="Used By" style="-fx-alignment: CENTER;" />
         </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </center>
</BorderPane>
