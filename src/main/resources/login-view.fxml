<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.nva.printing.inventory.LoginController">
   <top>
      <VBox alignment="CENTER" style="-fx-background-color: #a70104; -fx-padding: 20;">
         <children>
            <Label fx:id="titleLabel" text="NVA Printing Services" textFill="WHITE" styleClass="header-title">
               <font>
                  <Font name="System Bold" size="28.0" />
               </font>
            </Label>
            <Label fx:id="subtitleLabel" text="Inventory Management System" textFill="WHITE" styleClass="header-title">
               <font>
                  <Font name="System" size="16.0" />
               </font>
            </Label>
         </children>
      </VBox>
   </top>
   <center>
      <VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #f8f9fa; -fx-padding: 20 20 0 20;">
         <children>
            <VBox alignment="CENTER" spacing="15.0" prefWidth="320.0" maxWidth="320.0" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
               <children>
                  <Label text="Please Login" style="-fx-font-weight: bold; -fx-text-fill: #a70104;">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                  </Label>
                  <VBox spacing="5.0">
                     <Label text="Username:" style="-fx-font-weight: bold; -fx-text-fill: #333333;">
                        <font>
                           <Font name="System Bold" size="12.0" />
                        </font>
                     </Label>
                     <TextField fx:id="usernameField" promptText="Enter your username" prefWidth="200.0" style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #a70104; -fx-border-width: 2;" />
                  </VBox>
                  <VBox spacing="5.0">
                     <Label text="Password:" style="-fx-font-weight: bold; -fx-text-fill: #333333;">
                        <font>
                           <Font name="System Bold" size="12.0" />
                        </font>
                     </Label>
                        <HBox spacing="5.0">
                           <StackPane>
                              <PasswordField fx:id="passwordField" promptText="Enter your password" prefWidth="200.0" style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #a70104; -fx-border-width: 2;" />
                              <TextField fx:id="passwordVisibleField" promptText="Enter your password" prefWidth="200.0" style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #a70104; -fx-border-width: 2;" visible="false" managed="false" />
                           </StackPane>
                           <Button fx:id="togglePasswordButton" text="Show" minWidth="40.0" onAction="#handleTogglePasswordVisibility" style="-fx-background-radius: 5; -fx-border-radius: 5;" />
                        </HBox>
                  </VBox>
                  <Label fx:id="statusLabel" text="" style="-fx-text-fill: #666666; -fx-font-size: 12px;" />
                  <HBox alignment="CENTER" spacing="15.0">
                     <children>
                        <Button fx:id="cancelButton" cancelButton="true" mnemonicParsing="false" onAction="#handleCancel" prefWidth="90.0" style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-background-radius: 5; -fx-border-radius: 5; -fx-font-weight: bold;" text="Cancel" />
                        <Button fx:id="loginButton" defaultButton="true" mnemonicParsing="false" onAction="#handleLogin" prefWidth="90.0" style="-fx-background-color: #a70104; -fx-text-fill: white; -fx-background-radius: 5; -fx-border-radius: 5; -fx-font-weight: bold;" text="Login" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" spacing="5.0">
                     <children>
                        <Hyperlink fx:id="forgotPasswordLink" text="Forgot Password?" onAction="#handleForgotPassword" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </VBox>
   </center>
   <bottom>
      <VBox alignment="CENTER" spacing="1.0" style="-fx-padding: 4 0 0 0; -fx-translate-y: -12;">
         <children>
            <Label text="Default Manager Account:" style="-fx-font-weight: bold; -fx-text-fill: #a70104;">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
            <Label text="Username: manager | Password: manager" style="-fx-text-fill: #666666;">
               <font>
                  <Font name="System" size="11.0" />
               </font>
            </Label>
            <Label text="Head Production Account:" style="-fx-font-weight: bold; -fx-text-fill: #a70104;">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
            <Label text="Username: headproduction | Password: headproduction" style="-fx-text-fill: #666666;">
               <font>
                  <Font name="System" size="11.0" />
               </font>
            </Label>
            <Label text="Cashier Account:" style="-fx-font-weight: bold; -fx-text-fill: #a70104;">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
            <Label text="Username: cashier | Password: cashier" style="-fx-text-fill: #666666;">
               <font>
                  <Font name="System" size="11.0" />
               </font>
            </Label>
         </children>
      </VBox>
   </bottom>
</BorderPane>
